#include <stdio.h>

int main(){
    int n, i, count, before_divisor;

  printf("Digite um n√∫mero positivo: ");
  scanf("%d", &n);

  printf("os divisores de %d sao : ", n);

   count = 0;
   for(i = 1; i <= n; i++){
     if (n % i == 0){
       if(count > 0){
         if (i != n){
           printf(", ");
         }else{
           before_divisor = i;
            printf("e ", before_divisor);
         }
       }
       printf("%d", i);
       count++;
        
     }
   }
  
  

  return 0;
}
